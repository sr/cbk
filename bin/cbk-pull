#!/bin/sh
#/ Usage: cbk-pull [--version] [--help] [-a] <source>...
#/ Pull down cloud data onto the local host. Supported sources:
set -eu

cd "$(dirname "$0")/.."
. share/cbk/cbk-config

clouds=""
while [ "$#" -ne 0 ]; do
    case "$1" in
        --version)
            echo "cbk version $CBK_VERSION"
            exit 0
            ;;
        -a)
            clouds="$CBK_CLOUDS"
            shift
            ;;
        *)
            supported=false
            for src in $CBK_CLOUDS; do
                if [ "$1" = "$src" ]
                then supported=true
                fi
            done
            if ! $supported; then
                echo "cbk: Unsupported data source(s) \"$1\"" 1>&2
                echo "Supported sources: $CBK_CLOUDS" 1>&2
                exit 1
            fi
            clouds="$clouds $1"
            shift
            ;;
    esac
done

for cloud in $clouds; do
    pullcommand="cbk-pull-$cloud"
    start="$(date +"%s")"

    echo "at=start source=$cloud" 1>&2

    if $pullcommand
    then
        duration="$(($(date +'%s') - start))"
        echo "at=finish source=$cloud duration=$duration" 1>&2
    else
        echo "at=error source=$cloud" 1>&2
    fi
done
