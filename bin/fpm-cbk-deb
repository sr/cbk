#!/bin/sh
set -e
version="$1"
fpm \
    -s dir \
    -n cbk \
    -t deb \
    --version "$version" \
    --maintainer "Simon Rozet <me@simonrozet.com>" \
    --license "MIT" \
    --category "utils" \
    --architecture "all" \
    --url "https://github.com/sr/cbk" \
    -d "curl" \
    -d "coreutils >= 8.21" \
    -d "git >= 1.9.1" \
    -d "offlineimap >= 6.5.4" \
    -d "rsync >= 3.1.0" \
    -d "sed >= 4.2.2" \
    -d "youtube-dl >= 2015.11.10" \
    --exclude .git \
    --deb-priority "extra" \
    bin/cbk-pull=/usr/bin/cbk-pull \
    bin/git-mirror=/usr/bin/git-mirror \
    bin/github-repos=/usr/bin/github-repos \
    bin/headers=/usr/bin/headers \
    share/cbk=/usr/share

package_cloud push sr/utils/ubuntu/trusty cbk_${version}_all.deb
